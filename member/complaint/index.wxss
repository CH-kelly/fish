
.background{
  background-color: #F7F7F7;
}

.complaint-item{
  height: 100rpx;
  /* width: 100%; */
  padding: 0 30rpx;
  border-top:1px solid rgba(199,199,199,0.4);
  background: #fff;
  justify-content: flex-start;
}
.textarea{
  padding: 30rpx;
  height:400rpx;
  background:rgba(255,255,255,1);
  border-top:1px solid rgba(199,199,199,0.4);

  position: relative;
}
.upload-images{
  margin-top: 62rpx;
  /* width: 100%; */
  padding: 0 30rpx;

}
.title{
  
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.title-count{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);

  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}

.weui-input{
  width: 65%;
  height: 100%;
}
.upload{
  margin-top: 20rpx;
}
.upload>image{
  width: 200rpx;
  height: 200rpx;
}
.complaint-submit{
  margin-top: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.submit{
  width:560rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  background:rgba(244,106,38,1);
  border-radius:30rpx;

  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
