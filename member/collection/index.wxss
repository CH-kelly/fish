page{
  box-sizing: border-box;
}
.nav{
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}
.nav-title{
  line-height: 72rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.nav-active{

  font-size:32rpx;
  font-weight:bold;
  border-bottom: 4rpx solid rgba(1,214,192,1);
}
.collection{
  display: flex;
  align-items: center;
}
.title{
  width: 62%;
  margin-left: 30rpx;
  flex-direction: column;
  align-items: flex-start;
}
.input-image{
  width:210rpx;
  height:210rpx;
  border-radius:30rpx;
}
.title-h1{
font-size:32rpx;
font-weight:bold;
color:rgba(34,34,34,1);
}
.title-desc{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:36rpx;
  margin: 20rpx 0 40rpx 0;
}

.label-left{
  width: 50%;
}
.label-item{
  margin-right: 10rpx;
  width:70rpx;
  height:38rpx;
  line-height:38rpx;
  text-align: center;
  background:rgba(252,146,124,0.3);
  border-radius:6rpx;

  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(252,124,117,1);
}
.label-right>image{
  width:33rpx;
  height:31rpx;
}
.cancel{
  margin-left: 8rpx;
font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:#999999
}