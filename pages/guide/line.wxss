/* 内容样式 */
.center-lists{
  height: calc(100vh - 80rpx - 270rpx);
}
.scroll-view{
  height: calc(100vh - 80rpx - 270rpx);
}
.center-lists{
  padding: 0 30rpx;
}
.goods{
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}
.goods-item{
  /* margin-top: 30rpx; */
}
.image>image{
  width: 170rpx;
  height: 170rpx;
  border-radius: 10rpx;
}
.goods-title{
  padding-left: 30rpx;
}
.title-h2{
font-size:30rpx;
font-weight:bold;
color:rgba(0,0,0,1);
}
.price{
font-size:32rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(231,41,72,1);
}
.title-desc{
  text-align: left;
  width: 77%;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.second-line{
  margin-top: 20rpx;
}
.buy{
  padding: 4rpx 8rpx;
  background:rgba(231,41,72,1);
  border-radius:8rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.line{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
width: 100%;
height:1rpx;
background:rgba(232,232,232,0.4);
}
.nickname{
  text-align: left;
  width: 55%;
  padding-left: 20rpx;
}
.nickname>text{
  
font-size:34rpx;
font-weight:500;
}
.nickname>.label{
  margin-top: 6rpx;
  width:96rpx;
  height:30rpx;
  border:1rpx solid rgba(252,124,117,1);
  border-radius:8rpx;

  text-align: center;

  line-height: 30rpx;
  
  font-size:22rpx;
  font-weight:500;
  color:rgba(252,124,117,1);
}
.start>image{
  width: 21rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.info{
  width: 50%;
  justify-content: left;
}
.service{
  text-align: right;
  width: 50%;
}
.service>text{
font-size:26rpx;
font-weight:bold;
color:rgba(1,214,192,1);
}
.info>image{
  width: 90rpx;
  height: 88rpx;
  border-radius: 50%;
