/* pages/guide/index.wxss */
page{
  background-color: #ffffff;
  box-sizing: border-box;
}
.hidden_2{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.hidden_3{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title{
  height: 70rpx;
  padding: 0 30rpx;
  /* align-items: baseline; */
  justify-content: right;
  
}
.title-h1{
  font-size:30rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-right: 105rpx;

  position: relative;
  
}
.title-active{
  font-size:38rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
  /* border-bottom: 6rpx solid #01D6C0; */
}
.title-line{
  position: absolute;
  bottom: 2px;
  z-index: -1;
  width: 100%;
  height: 6rpx;
  background: rgba(1,214,192,.8);
  /* background: #01D6C0; */
}
/* 正文内容*/
.center{
  padding: 50rpx 30rpx;
}
.scroll-view{
  /* height: calc(100vh - 90rpx - 70rpx ); */
  height: calc(100vh - 90rpx  - 70rpx );
}
.item{
  margin-bottom: 60rpx;
}
.info>image{
  width: 90rpx;
  height: 88rpx;
  border-radius: 50%;
}

.nickname{
  text-align: left;
  width: 55%;
  padding-left: 20rpx;
}
.nickname>text{
  
font-size:34rpx;
font-weight:500;
}
.nickname>.label{
  margin-top: 6rpx;
  width:96rpx;
  height:30rpx;
  border:1rpx solid rgba(252,124,117,1);
  border-radius:8rpx;

  text-align: center;

  line-height: 30rpx;
  
  font-size:22rpx;
  font-weight:500;
  color:rgba(252,124,117,1);
}
.info{
  width: 50%;
  justify-content: left;
}
.service{
  text-align: right;
  width: 50%;
}
.service>text{
font-size:26rpx;
font-weight:bold;
color:rgba(1,214,192,1);
}

.middel{
  margin-top: 24rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
  text-align: left;
}


/* 商品内容 */
.goods-item{
  margin-top: 30rpx;
}
.image>image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 4rpx;
}
.goods-title{
  padding-left: 30rpx;
}
.title-h2{
  
font-size:30rpx;
font-weight:500;
color:rgba(0,0,0,1);
}
.price{
font-size:32rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(231,41,72,1);
}
.title-desc{
  text-align: left;
  width: 77%;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.buy{
  padding: 4rpx 8rpx;
  background:rgba(231,41,72,1);
  border-radius:8rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}

.see-more{
  margin-top: 30rpx;
  width: 100%;
  height:60rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(199,199,199,1);

  text-align: center;
  line-height: 60rpx;
  
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.second-line{
  margin-top: 20rpx;
}