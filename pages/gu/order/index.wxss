  flex-direction: column;
  align-items: flex-start;
}
.input-image{
  width:200rpx;
  height:200rpx;
  border-radius:30rpx;
}
.title-h1{
font-size:36rpx;
font-weight:bold;
color:rgba(34,34,34,1);
}
.price{
  /* margin-top: 55rpx; */
