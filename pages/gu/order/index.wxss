/* @import "/pages/order/cycle//order.wxss"; */
@import "../../order/cycle/order.wxss";
.page{
  background-color: #f3f3f3;
}
.fui-list-group{
  /* background-color: #ffffff; */
}
.address-item {
  /* padding-bottom: 20rpx; */
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}


.top{
  /* padding: 30rpx; */
  justify-content: flex-start;
}
.title{
  width: 60%;
  margin-left: 30rpx;
  flex-direction: column;
  align-items: flex-start;
}
.input-image{
  width:200rpx;
  height:200rpx;
  border-radius:30rpx;
}
.title-h1{
font-size:36rpx;
font-weight:bold;
color:rgba(34,34,34,1);
}
.price{
  margin-top: 55rpx;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(231,41,72,1);
}
.number{
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);

}
.line{
  margin-top: 30rpx;
  width: 100%;
  height: 2rpx;
background:rgba(226,226,226,1);
}
.button-bottom{
  margin-top: 20rpx;
}
.button-left{
  width: 60%;
  justify-content: flex-start;
  align-items: center;
}
.button-left>image{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  margin-right: 10rpx;

}
.button-left>text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.button-right{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.all-price{
  margin-left: 10rpx;
  font-size:36rpx !important;
  font-weight:bold !important;
  color:rgba(231,41,72,1) !important;
}
.scroll-view{
  height: calc(100vh - 80rpx);
}

.order-button{
  width:150rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  background:rgba(231,41,72,1);
  border-radius:30rpx;

  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.button-cancomment2{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(244,106,38,1);
}
.button-finish{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.cancel{
  width:140rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  border:2rpx solid rgba(199,199,199,1);
  border-radius:30rpx;

  
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}