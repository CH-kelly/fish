page{
  background: #ffffff;
  box-sizing: border-box;
}
text{
  font-family:PingFang SC;
}
.center{
  height: calc(100vh - 80rpx);
}
.header{
  padding: 30rpx;
}
.title-h2{
font-size:34rpx;
font-weight:bold;
color:rgba(0,0,0,1);
}
.price{
  
font-size:38rpx;
font-weight:bold;
color:rgba(231,41,72,1);
}
.desc{
  margin-top: 35rpx;
  text-align: left;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.line{
  margin-top: 15rpx;
  height: 2rpx;
background:rgba(199,199,199,1);
}

/* 导游资格证书 */
.qualifications{
  padding-top: 30rpx;
  justify-content: left;
}
.qualifications-line{
  width:4rpx;
  height:36rpx;
  background:rgba(1,199,210,1);
}
.qualifications>text{
  margin-left: 10rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.qualifications-image{
  margin-top: 30rpx;
  height:460rpx;
  border: 1px solid #f2f2f2;
}

/* 购买按钮 */
.button{
  /* padding: 20rpx 30rpx; */
  width: 100vw;
  height: 100rpx;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  justify-content: center;

}
.buy{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background: #EC414A;
  color: #ffffff;
  text-align: center;
  font-size:34rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  border-radius: 16rpx;
}