.header{
  padding: 30rpx;
}
.top{
  background: #ffffff;
}
.header-left{
  /* width: 50%; */
  justify-content: flex-start;
}
.header-left>image{
  margin-right: 20rpx;

  width:88rpx;
  height:88rpx;
  border-radius:50%;
}
.info{
  flex-direction: column;
  align-items: flex-start;
}
.info>text{
  
font-weight:bold;
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.info-label{
  
  margin-top: 10rpx;
  width:96rpx;
  height:30rpx;
  border:1rpx solid rgba(252,124,117,1);
  border-radius:8rpx;

  
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(252,124,117,1);
}
.header-right{
  flex-direction: column;
  align-items: flex-end;
}
.header-right>view{
  
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:#666666;
}
.online{
  color: #01D6C0;
}
.offline{
  margin-top: 10rpx;
  width:120rpx;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border:1px solid rgba(244,106,38,1);                    
  border-radius:10rpx;
  
  color:rgba(244,106,38,1) !important;
}
.line{
  width: 100%;
  height: 1px;
  background:rgba(226,226,226,1);
}
.navbar{
  justify-content: center;
}
.navbar>view{
  width: 100rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  padding: 20rpx 0rpx 10rpx 0px;
}
.navbar>.active{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  border-bottom: 6rpx solid #01D6C0;
}
.new-center text{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(34,34,34,1);
}
.tips{
  margin-bottom: 15rpx;

  font-size:28rpx;
  font-weight:500;
  color:rgba(231,41,72,1);
}
.middle{
  margin: 30rpx 0 40rpx 0;
  justify-content: flex-start;
}
.center-lists{
  margin: 20rpx 30rpx 0rpx 30rpx;
  overflow: hidden;
}
.center-item{
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
}
.middle>image{
  width:200rpx;
  height:200rpx;
  border-radius:30rpx;
  margin-right: 30rpx;
}
.middle .price{
  margin-top: 56rpx;
  font-size:36rpx;
  color:rgba(231,41,72,1);
}




.buttom-left{
  width: 50%;
  justify-content: flex-start;
}
.buttom-left>image{
    width:60rpx;
  height:60rpx;
  margin-right: 10rpx;
}
.userinfo{
  align-items:flex-start;
  flex-direction: column;

}
.buttom-right{
  width: 50%;
  justify-content: flex-end;
}
.userinfo>text{
  font-size: 24rpx;
}
/* 理解接单 */
.new-button{
  padding: 0 10rpx;
  /* width:140rpx; */
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius:30rpx;
  
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.refuse{
  border:2rpx solid rgba(199,199,199,1);
}
.receiving{
  background:rgba(231,41,72,1);
  color:rgba(255,255,255,1);
  border:none;
  margin-left: 20rpx;
}
.new-text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(231,41,72,1);
}