page{
  box-sizing: border-box;
}

.title{
  margin-left: 30rpx;
  flex-direction: column;
  align-items: flex-start;
}
.input-image{
  width:200rpx;
  height:200rpx;
  border-radius:30rpx;
}
.title-h1{
font-size:36rpx;
font-weight:bold;
color:rgba(34,34,34,1);
}
.price{
  margin-top: 88rpx;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(231,41,72,1);
}

.settlement{
  padding-bottom: 10rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.total{
  font-size:28rpx;
  color:rgba(153,153,153,1);
  font-weight:500;
}
.total-price{
  
font-size:28rpx;
font-weight:500;
color:rgba(0,0,0,1);
}
.settlement-item{
  width: 100%;
}

.pay>image{
  width:45rpx;
  height:46rpx;
  margin-right: 10rpx;
}
.pay>text{
  
font-size:24rpx;
font-weight:500;
color:rgba(24,188,103,1);
}


/* 支付按钮 */
.button{
  /* padding: 20rpx 30rpx; */
  width: 100vw;
  height: 100rpx;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  /* justify-content: center; */

}
.buy{
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  background: #EC414A;
  color: #ffffff;
  text-align: center;
  font-size:34rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  border-radius: 16rpx;
}


/* 购买份数 */
.number{
  margin-top: 88rpx;
  width: 150rpx;
  height: 50rpx;
}
.number-button{
  width: 33%;
  height: 100%;

  display: flex;
  justify-content: center;
  align-items: center;

}

.reduce{
  border-radius: 10rpx 0  0 10rpx;
  background: #f3f3f3;
}
.plus{
  border-radius: 0 10rpx 10rpx 0;
  background: #f3f3f3;
}
.placeholder-class{
  font-size: 28rpx;
font-weight: 500;
color: rgba(153,153,153,1);

}
.picker{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(0,0,0,1);

}

.scroll-view{
  height: calc(100vh - 100rpx);
}