
page{
  background: #ffffff;
  box-sizing: border-box;
}
text{
font-family:PingFang SC;
}
.hidden_2{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.hidden_3{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item{
  padding: 30rpx;

}
.info>image{
  width: 90rpx;
  height: 88rpx;
  border-radius: 50%;
}
.start>image{
  width: 21rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.nickname{
  text-align: left;
  width: 55%;
  padding-left: 20rpx;
}
.nickname>text{
  
font-size:34rpx;
font-weight:500;
}
.nickname>.label{
  margin-top: 6rpx;
  width:96rpx;
  height:30rpx;
  border:1rpx solid rgba(252,124,117,1);
  border-radius:8rpx;

  text-align: center;

  line-height: 30rpx;
  
  font-size:22rpx;
  font-weight:500;
  color:rgba(252,124,117,1);
}
.info{
  width: 50%;
  justify-content: left;
}
.service{
  text-align: right;
  width: 50%;
}
.service>text{
font-size:26rpx;
font-weight:bold;
color:rgba(1,214,192,1);
}

.middel{
  margin-top: 24rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
  text-align: left;
}


/* 商品内容 */
.goods-item{
  margin-top: 30rpx;
}
.image>image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 4rpx;
}
.goods-title{
  width: 80%;
  padding-left: 30rpx;
}
.title-h2{
  
font-size:30rpx;
font-weight:500;
color:rgba(0,0,0,1);
}
.price{
font-size:32rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(231,41,72,1);
}
.title-desc{
  text-align: left;
  width: 77%;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.buy{
  padding: 4rpx 8rpx;
  background:rgba(231,41,72,1);
  border-radius:8rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}

.see-more{
  margin-top: 30rpx;
  width: 100%;
  height:60rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(199,199,199,1);

  text-align: center;
  line-height: 60rpx;
  
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.second-line{
  margin-top: 20rpx;
}
.wx{
  margin-top: 30rpx;
  justify-content: left;
}
.left{
  width: 30%;
}
.left>text{
  font-size:24rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.wx-icon{
  width:28rpx;
  height:23rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.phone-icon{
  width:22rpx;
  height:24rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.line{
  height: 2rpx;
  width: 100%;
  background:rgba(199,199,199,1);
}

.detail-title{
  height: 40rpx;
  justify-content: left;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(24,188,103,0.2);

  position: relative;
}
.detail-title-h1{
  display: inline-block;
  width: 30%;
  height: 40rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.detail-active{
  width:142rpx;
  height:6rpx;
  background:rgba(24,188,103,1);
  border-radius:6rpx;

  position: absolute;
  bottom: 0;
}
.title-active{
  
font-size:36rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(51,51,51,1);
}

/* 导游资格证书 */
.qualifications{
  padding-top: 30rpx;
  justify-content: left;
}
.qualifications-line{
  width:4rpx;
  height:36rpx;
  background:rgba(1,199,210,1);
}
.qualifications>text{
  margin-left: 10rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.qualifications-image{
  margin-top: 30rpx;
  height:460rpx;
  border: 1px solid #f2f2f2;
}
.qualifications-image>image{
  width: 100%;
  height: 100%;
}

/* 评价列表 */
.evaluate{
  margin-top: 30rpx;
}
.evaluate-top{
  justify-content: left;
}
.evaluate-top>image{
  width:66rpx;
  height:66rpx;
  border-radius:50%;
  margin-right: 10rpx;
}
.evaluate-nickname{
  flex-direction: column;
  justify-content: left;
  align-items: flex-start;
}
.evaluate-nickname{
font-size:32rpx;
font-weight:500;
color:rgba(1,1,1,1);
}
.evaluate-date{
font-size:24rpx;
font-weight:400;
color:rgba(153,153,153,1);
}
.evaluate-middel{
  margin-top: 24rpx;
  text-align: left;

  font-size:30rpx;
  font-weight:500;
  color:rgba(58,61,62,1);
}
.evaluate-image{
  padding-top: 20rpx;
  flex-wrap: wrap;
  height: 220rpx;
  overflow: hidden;
}
.evaluate-image>image{
  width:220rpx;
  height:220rpx;
  border-radius:20rpx;
}
.evaluate-line{
  margin-top: 30rpx;
  height:2rpx;
  background:rgba(232,232,232,1);
}