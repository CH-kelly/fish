/* 拼团列表样式 */
page{
  background: #fff;
}
.collage-lists{
  /* border-top: 2rpx solid rgba(199,199,199,1); */
  /* border-bottom: 2rpx solid rgba(199,199,199,1); */
  padding: 0 30rpx;
}
.collage-title{
  font-size: 24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.collage-lists .more{
font-size:28rpx;
font-family:PingFang SC;
color:rgba(0,0,0,1);
}
.collage-lists-title{
  padding-top: 20rpx;

  padding-bottom: 20rpx;
  border-bottom: 2rpx solid  rgba(199,199,199,1);
}
.collage-lists .item-left{
  width: 50%;
  justify-content: flex-start;
}
.collage-lists-item{
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(199,199,199,0.1); 

}
.collage-lists-item>.item-left>image{
  margin-right: 10rpx;

  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}
.item-left-phone{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.item-left-sub{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.collage-lists-item .add-collage{
  width:120rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  background:rgba(244,106,38,1);
  border-radius:30rpx;

  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}