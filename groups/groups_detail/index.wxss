  -moz-appearance: none;
  background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
  border-radius: 10rpx;
  box-sizing: border-box;
  cursor: pointer;
  font-family: inherit;
  font-size: 30rpx;
